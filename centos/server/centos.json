{
  "_comment": "Validation Command:  `packer validate centos.json`",
  "_comment": "Build Command:       `packer build centos.json`",

  "variables": {
    "name": "centos-7.4",
    "box_basename": "centos-7.5",
    "template": "centos-7.5-x86_64_srv",

    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "git_revision": "__unknown_git_revision__",
    "version": "TIMESTAMP",

    "ks_path": "7/ks.cfg",
    "headless": "true",

    "mirror": "http://mirror2.hs-esslingen.de/centos",
    "mirror_directory": "7.5.1804/isos/x86_64",

    "iso_name": "CentOS-7-x86_64-DVD-1804.iso",
    "iso_checksum": "506e4e06abf778c3435b4e5745df13e79ebfc86565d7ea1e128067ef6b5a6345",
    "iso_checksum_type": "sha256",

    "http_root_context": "../_shared/http",
    "http_pMin": "9001",
    "http_pMax": "9009",

    "cpus": "1",
    "memory": "1024",
    "disk_size": "65536",

    "username": "vagrant",
    "password": "vagrant",

    "vbox_provider": "virtualbox",

    "ftp_proxy": "{{env `ftp_proxy`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "virtualbox",
      "guest_os_type": "RedHat_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `template`}}",
      "virtualbox_version_file": ".vbox_version",
      "output_directory": "./{{user `box_basename`}}_{{user `vbox_provider`}}",
      "headless": "{{user `headless`}}",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",

      "http_directory" : "{{user `http_root_context`}}",
      "http_port_min" : "{{user `http_pMin`}}",
      "http_port_max" : "{{user `http_pMax`}}",

      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",

      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ]
      ],

      "boot_wait": "10s",
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],

      "shutdown_command": "echo '{{user `password`}}' | sudo -S /sbin/halt -h -p"
    }
  ],

  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "ftp_proxy={{user `ftp_proxy`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "type": "shell",
      "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/update.sh",
        "../../_common/sshd.sh",
        "scripts/networking.sh",
        "../../_common/vagrant.sh",
        "../../_common/virtualbox.sh",
        "../../_common/vmware.sh",
        "../../_common/parallels.sh",
        "scripts/cleanup.sh",
        "../../_common/minimize.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox"],
      "output": "../_artifacts/{{.Provider}}/{{user `box_basename`}}/{{user `template`}}.box",
      "keep_input_artifact": false
    }
  ]
}
