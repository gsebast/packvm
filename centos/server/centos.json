{
  "_comment": "Default build definition shared by all CentOS Server builds.",

  "_comment": "Validation Command:  `packer validate -only='vb_plain' centos.json`",

  "_comment": "Build Command:       `packer build -only='vb_plain' centos.json`",

  "variables": {
    "box_basename": "centos-7.6",
    "template": "centos-7.6-x86_64",
    "image_id": "srv",

    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "git_revision": "__unknown_git_revision__",
    "version": "TIMESTAMP",

    "ks_path": "7/ks.cfg",
    "headless": "true",

    "boot_command_prefix": "<up><wait><tab>",

    "locale": "en_US.UTF-8",

    "mirror": "http://mirror2.hs-esslingen.de/centos",
    "mirror_directory": "7.6.1810/isos/x86_64",

    "iso_name": "CentOS-7-x86_64-DVD-1810.iso",
    "iso_checksum": "6d44331cc4f6c506c7bbe9feb8468fad6c51a88ca1393ca6b8b486ea04bec3c1",
    "iso_checksum_type": "sha256",

    "http_root_context": "../_shared/http",
    "http_pMin": "9001",
    "http_pMax": "9009",

    "cpus": "1",
    "memory": "1024",
    "disk_size": "16384",

    "username": "vagrant",
    "password": "vagrant",

    "vbox_provider": "virtualbox",

    "ftp_proxy": "{{env `ftp_proxy`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "vb_plain",

      "output_directory": "./{{user `template`}}_{{user `image_id`}}_{{user `vbox_provider`}}",
      
      "guest_os_type": "RedHat_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `template`}}_{{user `image_id`}}",
      "virtualbox_version_file": ".vbox_version",
      
      "headless": "{{user `headless`}}",
      
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",

      "http_directory" : "{{user `http_root_context`}}",
      "http_port_min" : "{{user `http_pMin`}}",
      "http_port_max" : "{{user `http_pMax`}}",

      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",

      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ]
      ],

      "boot_wait": "10s",
      "boot_command": [
        "{{user `boot_command_prefix`}}",
        " text",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}",
        "<enter><wait>"
      ],

      "shutdown_command": "echo '{{user `username`}}' | sudo -S /sbin/halt -h -p"
    },
    {
      "type": "virtualbox-ovf",
      "name": "vb_custom-{{user `image_id`}}",

      "output_directory": "./{{user `template`}}_{{user `image_id`}}_{{user `vbox_provider`}}",

      "source_path": "../_artifacts/virtualbox/{{user `box_basename`}}/ovf/{{user `ovf_source_file`}}",

      "vm_name": "{{user `template`}}_{{user `image_id`}}",

      "headless": "{{user `headless`}}",

      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",

      "shutdown_command": "echo '{{user `username`}}' | sudo -S /sbin/halt -h -p"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "only": ["vb_plain"],
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo '{{user `username`}}' | {{.Vars}} sudo -E -S sh -eu '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/update.sh",
        "../../_common/scripts/sh/shared/sshd.sh",
        "scripts/networking.sh",
        "../../_common/scripts/sh/shared/vagrant.sh",
        "../../_common/scripts/sh/shared/virtualbox.sh",
        "../../_common/scripts/sh/shared/vmware.sh",
        "../../_common/scripts/sh/shared/parallels.sh",
        "scripts/cleanup.sh",
        "../../_common/scripts/sh/shared/minimize.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["vb_custom-{{user `image_id`}}"],
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo '{{user `username`}}' | {{.Vars}} sudo -E -S sh -eu '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": "{{user `scripts`}}"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": ["vb_plain"],
      "output": "../_artifacts/{{user `vbox_provider`}}/{{user `box_basename`}}/{{user `template`}}_{{user `image_id`}}.box",
      "keep_input_artifact": true
    },
    {
      "type": "vagrant",
      "only": ["vb_custom-{{user `image_id`}}"],
      "output": "../_artifacts/{{user `vbox_provider`}}/{{user `box_basename`}}/{{user `template`}}_{{user `image_id`}}.box",
      "keep_input_artifact": false
    },
    {
      "type": "shell-local",
      "only": ["vb_plain"],
      "environment_vars": [
        "SOURCE_FOLDER=./{{user `template`}}_{{user `image_id`}}_{{user `vbox_provider`}}",
        "FILE_PATTERN={{user `template`}}_{{user `image_id`}}*",
        "TARGET_FOLDER=../_artifacts/{{user `vbox_provider`}}/{{user `box_basename`}}/ovf"
      ],
      "scripts": [
        "../../_common/scripts/sh/helpers/copy_ovf.sh",
        "../../_common/scripts/sh/helpers/cleanup_input_artifact.sh"
      ]
    }
  ]
}
