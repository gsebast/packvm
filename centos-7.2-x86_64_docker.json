{
  "builders": [
    {
      "type": "docker",
      "image": "centos",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/bin/bash"
      ],
      "commit": true
    }
  ],

  "provisioners":
  [
    {
      "type": "chef-solo",
      "skip_install": "false",
      "prevent_sudo": "true",
      "cookbook_paths": ["/tmp/cookbooks"],
      "json": {
        "java": {
          "install_flavor": "oracle",
          "oracle": {
            "accept_oracle_download_terms": "true"
          },
          "jdk_version": "8"
        },
        "jenkins": {
          "master": {
            "install_method": "war",
            "source": "http://mirrors.jenkins-ci.org/war-stable/latest/jenkins.war"
          }
        }
      },
      "run_list": [
        "recipe[java]",
        "recipe[jenkins::master]"
      ]
    }
  ]
}
