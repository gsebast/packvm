{
  "variables": {
    "base_image_name": "centos",
    "base_image_tag": "7.2.1511",

    "dest_repository": "gsebast:5000",
    "src_repository": "",

    "image_name": "chef-client",
    "image_tag": "1",
    "chef_version": "12.9.38"
  },

  "builders": [
    {
      "type": "docker",
      "image": "{{if {{user `src_repository`}}}}{{user `src_repository`}}/{{end}}{{user `base_image_name`}}:{{user `base_image_tag`}}",
      "commit": true,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],

  "provisioners":
  [
    {
      "type": "shell",
      "inline": ["curl -L https://omnitruck.chef.io/install.sh | bash -s -- -v {{user `chef_version`}}"]
    }
  ],

  "post-processors":
  [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `dest_repository`}}/{{user `image_name`}}",
        "tag": "{{user `chef_version`}}-{{user `image_tag`}}"
      },
      {
        "type": "docker-push"
      }
    ]
  ]
}
